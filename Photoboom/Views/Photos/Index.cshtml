@model IEnumerable<Photoboom.Models.Photo>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">My Photos</h1>

@{
        if (Model.Count() == 0)
        {
        <br />
        <br />
        <p class="text-center">You don't have any photos yet :(</p>
        }
        else
        {
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        @{
                            int i = 0;
                            foreach (var item in Model)
                            {
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.PhotoId">
                                        <img src="@item.ImageUrl" alt="Image" style="width: 150px; height: 220px;" />
                                    </a>
                                </td>

                                i++;
                                if (i % 4 == 0)
                                {
                                    @Html.Raw("</tr><tr>");
                                }
                            }
                        }
                    </tr>
                </tbody>
            </table>
        </div>
        }
        <div class="text-center">
            <a asp-action="Create">Add Photo</a>
        </div>
}


